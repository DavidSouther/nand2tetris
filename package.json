{
  "name": "computron5k",
  "version": "0.0.0",
  "description": "A Javascript reimplementation of nand2tetris.org.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidsouther/computron5k.git"
  },
  "author": "David Souther <davidsouther@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/davidsouther/computron5k/issues"
  },
  "homepage": "https://github.com/davidsouther/computron5k#readme",
  "scripts": {
    "compile": "tsc",
    "ci": "CI=true npm run check && CI=true npm run test",
    "check": "npm run check:format && npm run check:types && npm run check:lint",
    "check:format": "prettier --check {extension,simulator,web}/{public,src}",
    "check:lint": "eslint {extension,simulator,web}/{public,src}",
    "check:types": "tsc --noEmit",
    "format": "prettier --write {extension,simulator,web}/{public,src}",
    "fix": "eslint --fix {extension,simulator,web}/{public,src}",
    "test": "CI=true npm test -w simulator && CI=true npm test -w web"
  },
  "devDependencies": {
    "eslint": "^8.25.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  },
  "workspaces": [
    "extension",
    "simulator",
    "web"
  ]
}