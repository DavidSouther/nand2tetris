{
  "name": "computron5k",
  "version": "0.0.0",
  "private": true,
  "description": "A Javascript reimplementation of nand2tetris.org.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidsouther/computron5k.git"
  },
  "author": "David Souther <davidsouther@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/davidsouther/computron5k/issues"
  },
  "homepage": "https://github.com/davidsouther/computron5k#readme",
  "scripts": {
    "precli": "npm run build -w cli",
    "cli": "node cli",
    "ci": "CI=true npm run check && CI=true npm run test",
    "precheck": "npm -w web run extract && npm -w web run lingui",
    "check": "npm run check:format && npm run check:types && npm run check:lint",
    "clean": "rm -rf {cli,components,extension,projects,runner,simulator,web}/build",
    "format": "prettier --write {cli,components,extension,projects,runner,simulator,web}/src web/public",
    "fix": "eslint --fix {cli,components,extension,projects,runner,simulator,web}/src web/public",
    "check:format": "prettier --ignore-unknown --check {cli,components,extension,projects,runner,simulator,web}/src web/public",
    "check:lint": "eslint --no-error-on-unmatched-pattern {cli,components,extension,projects,runner,simulator,web} web/public",
    "check:types": "tsc --build tsconfig.json",
    "build": "CI=true npm run build -w projects && CI=true npm run build -w runner && CI=true npm run build -w simulator && CI=true npm run build -w cli && CI=true npm run build -w components && CI=true npm run build -w web",
    "test": "CI=true npm test -w simulator && CI=true npm test -w components && CI=true npm test -w web",
    "web": "npm run start -w web",
    "preinstall-cli": "npm run build -w projects && npm run build -w runner && npm run build -w simulator && npm run build -w cli",
    "install-cli": "npm i -g cli"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "esbuild": "^0.15.11",
    "eslint": "^8.25.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  },
  "workspaces": [
    "cli",
    "components",
    "extension",
    "extension/views/hdl",
    "projects",
    "runner",
    "simulator",
    "web"
  ]
}
