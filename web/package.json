  "homepage": "https://nand2tetris.github.io/web-ide",
  "devDependencies": {
    "@davidsouther/jiffies": "^2.0.5",
    "@lingui/cli": "^3.14.0",
    "@lingui/macro": "^3.14.0",
    "@lingui/react": "^3.14.0",
    "@monaco-editor/react": "^4.4.5",
    "@nand2tetris/components": "*",
    "@nand2tetris/projects": "*",
    "@nand2tetris/simulator": "*",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.6",
    "@types/error-cause": "^1.0.1",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.41",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/vscode": "^1.72.0",
    "gh-pages": "^4.0.0",
    "immer": "^9.0.15",
    "make-plural": "^7.1.0",
    "ohm-js": "^16.3.4",
    "prettier": "^2.6.2",
    "raw-loader": "^4.0.2",
    "raw.macro": "^0.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.3",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "remark-gfm": "^3.0.1",
    "rxjs": "^7.5.5",
    "sass": "^1.53.0",
    "source-map-explorer": "^2.5.3",
    "typescript": "^4.9",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "prebuild": "npm run extract && npm run lingui",
    "extract": "lingui extract",
    "lingui": "lingui compile",
    "predeploy": "npm run build ; ./scripts/predeploy.sh",
    "deploy": "gh-pages -d build"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lingui": {
    "locales": [
      "en",
      "en-PL"
    ],
    "sourceLocale": "en",
    "pseudoLocale": "en-PL",
    "fallbackLocales": {
      "en-PL": "en"
    },
    "catalogs": [
      {
        "path": "src/locales/{locale}/messages",
        "include": [
          "src",
          "public"
        ]
      }
    ],
    "format": "po"
  },
  "jest": {
    "moduleNameMapper": {
      "^@nand2tetris/([^/]+)/(.*)": "<rootDir>/../node_modules/@nand2tetris/$1/build/$2"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@davidsouther)"
    ]
  },
  "dependencies": {
    "react-ga4": "^1.4.1"
  }
}
